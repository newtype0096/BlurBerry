<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="BlurBerry.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BlurBerry"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BlurBerry"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TitleBar
            x:Name="titleBar"
            Title="BlurBerry"
            Grid.Row="0" />

        <NavigationView
            x:Name="navigationView"
            Grid.Row="1"
            Canvas.ZIndex="0"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="False"
            IsTabStop="False"
            SelectionChanged="navigationView_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    x:Name="home"
                    AutomationProperties.AutomationId="Home"
                    Content="홈"
                    Icon="Home" />
                <NavigationViewItem
                    x:Name="image"
                    AutomationProperties.AutomationId="Image"
                    Content="이미지 라이브러리">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE91B;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="video"
                    AutomationProperties.AutomationId="Video"
                    Content="비디오 라이브러리">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8B2;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem
                    x:Name="settings"
                    AutomationProperties.AutomationId="Settings"
                    Content="설정"
                    Icon="Setting" />
            </NavigationView.FooterMenuItems>

            <Frame x:Name="rootFrame" />
        </NavigationView>
    </Grid>
</Window>
