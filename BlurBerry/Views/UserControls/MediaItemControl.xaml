<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="BlurBerry.Views.UserControls.MediaItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BlurBerry.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        PointerEntered="Grid_PointerEntered"
        PointerExited="Grid_PointerExited"
        PointerReleased="Grid_PointerReleased">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" CornerRadius="5">
            <Image
                Width="280"
                Height="150"
                Source="{Binding Thumbnail}"
                Stretch="UniformToFill" />

            <Grid
                x:Name="HoverOverlay"
                Width="280"
                Height="150"
                Background="#88000000"
                Opacity="0">

                <CheckBox
                    x:Name="SelectCheckBox"
                    MinWidth="20"
                    MinHeight="20"
                    Margin="10,10,3,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="SelectCheckBox_Click"
                    Content=""
                    IsChecked="{Binding IsSelected, Mode=TwoWay}"
                    Opacity="0" />
            </Grid>

            <Border
                x:Name="ImageBorder"
                Width="280"
                Height="150"
                BorderThickness="0"
                CornerRadius="5"
                IsHitTestVisible="False" />

            <Border
                x:Name="DurationOverlay"
                Margin="8"
                Padding="6,2"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="#CC000000"
                CornerRadius="4"
                Visibility="{Binding MediaType, Converter={StaticResource MediaTypeToVisibilityConverter}}">
                <TextBlock
                    FontSize="12"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="{Binding Duration, Converter={StaticResource TimeSpanToStringConverter}}" />
            </Border>
        </Grid>

        <TextBlock
            Grid.Row="1"
            Margin="0,10,0,0"
            FontWeight="Bold"
            Text="{Binding FileName}"
            TextTrimming="CharacterEllipsis" />

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Normal">
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="HoverOverlay"
                            Storyboard.TargetProperty="Opacity"
                            To="0"
                            Duration="0:0:0.2" />
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ImageBorder" Storyboard.TargetProperty="BorderThickness">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="0" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="PointerOver">
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="HoverOverlay"
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:0.2" />
                        <DoubleAnimation
                            Storyboard.TargetName="SelectCheckBox"
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:0.2" />
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Selected">
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="HoverOverlay"
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:0.2" />
                        <DoubleAnimation
                            Storyboard.TargetName="SelectCheckBox"
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:0.2" />
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ImageBorder" Storyboard.TargetProperty="BorderThickness">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="3" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ImageBorder" Storyboard.TargetProperty="BorderBrush">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="#0078D4" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>