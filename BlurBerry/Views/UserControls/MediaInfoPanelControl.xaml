<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="BlurBerry.Views.UserControls.MediaInfoPanelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BlurBerry.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BlurBerry.ViewModels.Pages"
    d:DataContext="{d:DesignInstance Type=vm:EditPageViewModel,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Name="TextBlock_Normal" TargetType="TextBlock">
            <Setter Property="Height" Value="30" />
        </Style>

        <Style BasedOn="{StaticResource TextBlock_Normal}" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Style="{StaticResource TextBlock_Normal}"
            Text="미디어 정보" />

        <Grid Grid.Row="1" Width="270">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="파일명" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Text="{Binding FileName}"
                TextTrimming="CharacterEllipsis" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="크기" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Text="{Binding FormattedFileSize}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Text="길이"
                Visibility="{Binding IsVideo, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Text="{Binding FormattedDuration}"
                Visibility="{Binding IsVideo, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Text="타입" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Text="{Binding FileExtension}" />
        </Grid>
    </Grid>
</UserControl>
