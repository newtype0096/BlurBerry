<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="BlurBerry.Views.UserControls.BottomSideBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BlurBerry.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border>
        <Grid Margin="20,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="00:00:03" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="10,0"
                        Text="/" />
                    <TextBlock Grid.Column="2" Text="00:00:30" />
                </Grid>

                <Grid Grid.Column="1" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="처음" />
                    <Button
                        Grid.Column="1"
                        Margin="15,0,0,0"
                        Content="5초 전" />
                    <Button
                        Grid.Column="2"
                        Margin="15,0,0,0"
                        Content="재생" />
                    <Button
                        Grid.Column="3"
                        Margin="15,0,0,0"
                        Content="5초 후" />
                    <Button
                        Grid.Column="4"
                        Margin="15,0,0,0"
                        Content="마지막" />
                </Grid>

                <Button
                    Grid.Column="2"
                    VerticalAlignment="Top"
                    Content="1.0x" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
