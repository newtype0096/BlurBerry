<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="BlurBerry.Views.Pages.EditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:BlurBerry.Views.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BlurBerry.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BlurBerry.ViewModels.Pages"
    d:DataContext="{d:DesignInstance Type=vm:EditPageViewModel,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <controls:ProjectPanelControl Grid.Column="0" DataContext="{Binding}" />
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <controls:VideoCanvasControl Grid.Row="0" />
            <controls:BottomSideBarControl Grid.Row="1" />
        </Grid>
        <controls:RightSideBarControl Grid.Column="2" />
    </Grid>
</Page>