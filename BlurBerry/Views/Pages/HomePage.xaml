<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="BlurBerry.Views.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BlurBerry.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto " />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="36,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="42"
                    Text="홈" />
            </Grid>

            <SplitButton Grid.Column="1" HorizontalAlignment="Right">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        FontSize="13"
                        Glyph="&#xE838;" />

                    <TextBlock
                        Grid.Column="1"
                        Margin="8,0,0,0"
                        Text="파일 열기" />
                </Grid>

                <SplitButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Margin="5">
                            <MenuFlyoutItem.Template>
                                <ControlTemplate>
                                    <Grid
                                        x:Name="RootGrid"
                                        Padding="10,5"
                                        CornerRadius="3">
                                        <Grid.Background>
                                            <SolidColorBrush Color="Transparent" />
                                        </Grid.Background>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <FontIcon
                                            Grid.Column="0"
                                            FontSize="16"
                                            Glyph="&#xE838;" />

                                        <Grid Grid.Column="1" Margin="13,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="파일 열기" />
                                            <TextBlock
                                                Grid.Row="1"
                                                FontSize="12"
                                                Foreground="DarkGray"
                                                Text="재생할 파일 찾아보기" />
                                        </Grid>

                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal" />
                                                <VisualState x:Name="PointerOver">
                                                    <VisualState.Setters>
                                                        <Setter Target="RootGrid.Background" Value="{ThemeResource MenuFlyoutItemBackgroundPointerOver}" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <VisualState.Setters>
                                                        <Setter Target="RootGrid.Background" Value="{ThemeResource MenuFlyoutItemBackgroundPressed}" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Grid>
                                </ControlTemplate>
                            </MenuFlyoutItem.Template>
                        </MenuFlyoutItem>

                        <MenuFlyoutItem Margin="5">
                            <MenuFlyoutItem.Template>
                                <ControlTemplate>
                                    <Grid
                                        x:Name="RootGrid"
                                        Padding="10,5"
                                        CornerRadius="3">
                                        <Grid.Background>
                                            <SolidColorBrush Color="Transparent" />
                                        </Grid.Background>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <FontIcon
                                            Grid.Column="0"
                                            FontSize="16"
                                            Glyph="&#xE8B7;" />

                                        <Grid Grid.Column="1" Margin="13,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="폴더 열기" />
                                            <TextBlock
                                                Grid.Row="1"
                                                FontSize="12"
                                                Foreground="DarkGray"
                                                Text="폴더를 선택하고 해당 폴더의 모든 미디어를 가져옵니다." />
                                        </Grid>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal" />
                                                <VisualState x:Name="PointerOver">
                                                    <VisualState.Setters>
                                                        <Setter Target="RootGrid.Background" Value="{ThemeResource MenuFlyoutItemBackgroundPointerOver}" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <VisualState.Setters>
                                                        <Setter Target="RootGrid.Background" Value="{ThemeResource MenuFlyoutItemBackgroundPressed}" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Grid>
                                </ControlTemplate>
                            </MenuFlyoutItem.Template>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </SplitButton.Flyout>
            </SplitButton>
        </Grid>

        <Grid Grid.Row="1" Margin="36,0,36,24">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock FontSize="20" Text="최근 미디어" />
        </Grid>
    </Grid>
</Page>
