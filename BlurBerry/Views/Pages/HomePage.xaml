<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="BlurBerry.Views.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviros="using:Microsoft.Xaml.Behaviors"
    xmlns:controls="using:BlurBerry.Views.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BlurBerry.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BlurBerry.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:HomePageViewModel,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Page Header  -->
        <Grid Grid.Row="0" Margin="36,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                VerticalAlignment="Center"
                FontSize="42"
                Text="홈" />

            <SplitButton
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Command="{Binding OpenFileCommand}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon FontSize="13" Glyph="&#xE838;" />
                    <TextBlock Text="파일 열기" />
                </StackPanel>

                <SplitButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Margin="5" Command="{Binding OpenFileCommand}">
                            <MenuFlyoutItem.Template>
                                <ControlTemplate>
                                    <Grid
                                        x:Name="RootGrid"
                                        Padding="10,5"
                                        CornerRadius="3">
                                        <Grid.Background>
                                            <SolidColorBrush Color="Transparent" />
                                        </Grid.Background>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <FontIcon
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Glyph="&#xE838;" />

                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="13,0,0,0"
                                            VerticalAlignment="Center">
                                            <TextBlock Text="파일 열기" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="DarkGray"
                                                Text="재생할 파일 찾아보기" />
                                        </StackPanel>

                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal" />
                                                <VisualState x:Name="PointerOver">
                                                    <VisualState.Setters>
                                                        <Setter Target="RootGrid.Background" Value="{ThemeResource MenuFlyoutItemBackgroundPointerOver}" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <VisualState.Setters>
                                                        <Setter Target="RootGrid.Background" Value="{ThemeResource MenuFlyoutItemBackgroundPressed}" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Grid>
                                </ControlTemplate>
                            </MenuFlyoutItem.Template>
                        </MenuFlyoutItem>

                        <MenuFlyoutItem Margin="5" Command="{Binding OpenFolderCommand}">
                            <MenuFlyoutItem.Template>
                                <ControlTemplate>
                                    <Grid
                                        x:Name="RootGrid"
                                        Padding="10,5"
                                        CornerRadius="3">
                                        <Grid.Background>
                                            <SolidColorBrush Color="Transparent" />
                                        </Grid.Background>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <FontIcon
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Glyph="&#xE8B7;" />

                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="13,0,0,0"
                                            VerticalAlignment="Center">
                                            <TextBlock Text="폴더 열기" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="DarkGray"
                                                Text="폴더를 선택하고 해당 폴더의 모든 미디어를 가져옵니다." />
                                        </StackPanel>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal" />
                                                <VisualState x:Name="PointerOver">
                                                    <VisualState.Setters>
                                                        <Setter Target="RootGrid.Background" Value="{ThemeResource MenuFlyoutItemBackgroundPointerOver}" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <VisualState.Setters>
                                                        <Setter Target="RootGrid.Background" Value="{ThemeResource MenuFlyoutItemBackgroundPressed}" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Grid>
                                </ControlTemplate>
                            </MenuFlyoutItem.Template>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </SplitButton.Flyout>
            </SplitButton>
        </Grid>

        <!--  Content Area  -->
        <Grid Grid.Row="1" Margin="36,0,0,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Normal Header  -->
            <Grid
                Grid.Row="0"
                Height="50"
                Padding="0,10,0,0"
                Visibility="{Binding HasSelectedItems, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="2"
                    Margin="0,0,36,0"
                    VerticalAlignment="Center"
                    Background="Transparent">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid
                                x:Name="RootGrid"
                                Background="Transparent"
                                CornerRadius="5">
                                <ContentPresenter x:Name="ContentPresenter" />
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Target="ContentPresenter.Foreground" Value="#4cb6f0" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Target="ContentPresenter.Foreground" Value="#4cb6f0" />
                                                <Setter Target="RootGrid.Background" Value="#393939" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>

                    <StackPanel Padding="15,10" Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            Foreground="White"
                            Text="정렬 기준:" />
                        <TextBlock Margin="0,0,10,0" Text="{Binding FilterDisplayText}" />
                        <FontIcon
                            FontSize="12"
                            Foreground="White"
                            Glyph="&#xE70D;" />
                    </StackPanel>

                    <Button.Flyout>
                        <MenuFlyout>
                            <RadioMenuFlyoutItem
                                Command="{Binding ShowAllCommand}"
                                GroupName="FilterGroup"
                                IsChecked="{Binding IsAllFilterSelected}"
                                Text="전체" />

                            <RadioMenuFlyoutItem
                                Command="{Binding ShowImagesCommand}"
                                GroupName="FilterGroup"
                                IsChecked="{Binding IsImageFilterSelected}"
                                Text="이미지" />

                            <RadioMenuFlyoutItem
                                Command="{Binding ShowVideosCommand}"
                                GroupName="FilterGroup"
                                IsChecked="{Binding IsVideoFilterSelected}"
                                Text="비디오" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </Grid>

            <!--  Selection Mode Header  -->
            <Grid
                Grid.Row="1"
                Height="50"
                Margin="0,0,35,0"
                Padding="20,10"
                Background="#323232"
                CornerRadius="5"
                Visibility="{Binding HasSelectedItems, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <CheckBox
                    Grid.Column="0"
                    MinWidth="20"
                    MinHeight="20"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    Command="{Binding ToggleAllSelectionCommand}"
                    IsChecked="{Binding AreAllItemsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Grid.Column="1"
                    Margin="0,-2,8,0"
                    VerticalAlignment="Center"
                    Text="{Binding SelectedItemCount}" />

                <Button
                    Grid.Column="2"
                    Margin="0,-2,12,0"
                    Padding="0"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding ClearAllSelectionCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid x:Name="RootGrid" Background="Transparent">
                                <ContentPresenter x:Name="ContentPresenter" />
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Target="ContentPresenter.Foreground" Value="#4cb6f0" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Target="ContentPresenter.Foreground" Value="White" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="지우기" />
                </Button>

                <Button
                    Grid.Column="4"
                    VerticalAlignment="Center"
                    Command="{Binding DeleteSelectedCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Glyph="&#xE894;" />

                            <TextBlock Margin="10,-1,0,0" Text="제거" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>

            <GridView
                Grid.Row="2"
                Margin="0,20,0,0"
                ItemsSource="{Binding FilteredMediaInfos}"
                SelectionMode="None">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>

                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Margin" Value="0,0,24,24" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                    </Style>
                </GridView.ItemContainerStyle>

                <GridView.ItemTemplate>
                    <DataTemplate>
                        <controls:MediaItemControl />
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>
    </Grid>
</Page>
