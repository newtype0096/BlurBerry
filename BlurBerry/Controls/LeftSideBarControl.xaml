<UserControl
    x:Class="BlurBerry.Controls.LeftSideBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BlurBerry.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:BlurBerry.ViewModels"
    Width="300"
    d:DataContext="{d:DesignInstance vm:LeftSideBarControlViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="300"
    BorderBrush="DimGray"
    BorderThickness="1"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="DimGray" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Row="0">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    Content="전체 화면 블러" />
                <ui:ToggleSwitch Grid.Column="1" HorizontalAlignment="Right" />
            </Grid>
        </Border>

        <Border Grid.Row="1">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    VerticalContentAlignment="Center"
                    Content="커스텀 블러" />
                <ui:Button Grid.Row="1" Content="블러 영역 직접 지정하기" />
            </Grid>
        </Border>

        <Border Grid.Row="2">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    Content="AI 자동 인식" />
                <ui:ToggleSwitch Grid.Column="1" HorizontalAlignment="Right" />
            </Grid>
        </Border>

        <Border Grid.Row="3">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    Content="사람 전체" />
                <ui:ToggleSwitch
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Right" />

                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    Content="사람 얼굴" />
                <ui:ToggleSwitch
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Right" />

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    Content="자동차" />
                <ui:ToggleSwitch
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalAlignment="Right" />

                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    Content="자동차 번호판" />
                <ui:ToggleSwitch
                    Grid.Row="3"
                    Grid.Column="1"
                    HorizontalAlignment="Right" />
            </Grid>
        </Border>

        <Border Grid.Row="4">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    VerticalContentAlignment="Center"
                    Content="자동 블러 적용 방식" />
                <ui:DropDownButton Grid.Row="1" />
            </Grid>
        </Border>

        <Border Grid.Row="5">
            <Grid Margin="15">
                <Grid.RowDefinitions />
            </Grid>
        </Border>
    </Grid>
</UserControl>
